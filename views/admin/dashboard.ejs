<%- include('../partials/header', { title: '管理后台', user: user }) %>

<div class="card">
  <h1>管理后台</h1>
  <p style="color: #666; margin-bottom: 30px">
    欢迎回来，管理员 <%= user.username %>
  </p>

  <div
    style="
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    "
  >
    <div
      style="
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 30px;
        border-radius: 10px;
      "
    >
      <h3 style="margin-bottom: 10px">👥 总用户数</h3>
      <p style="font-size: 36px; font-weight: bold"><%= stats.totalUsers %></p>
    </div>

    <div
      style="
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        padding: 30px;
        border-radius: 10px;
      "
    >
      <h3 style="margin-bottom: 10px">📁 总文件数</h3>
      <p style="font-size: 36px; font-weight: bold"><%= stats.totalFiles %></p>
    </div>

    <div
      style="
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 30px;
        border-radius: 10px;
      "
    >
      <h3 style="margin-bottom: 10px">🌍 公开文件</h3>
      <p style="font-size: 36px; font-weight: bold"><%= stats.publicFiles %></p>
    </div>

    <div
      style="
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        color: white;
        padding: 30px;
        border-radius: 10px;
      "
    >
      <h3 style="margin-bottom: 10px">🔒 私有文件</h3>
      <p style="font-size: 36px; font-weight: bold">
        <%= stats.privateFiles %>
      </p>
    </div>
  </div>

  <div style="display: flex; gap: 15px">
    <a href="/admin/users" class="btn btn-primary">用户管理</a>
    <a href="/admin/files" class="btn btn-primary">文件管理</a>
  </div>
</div>

<%- include('../partials/footer') %>
