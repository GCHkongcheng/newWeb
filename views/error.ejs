<%- include('partials/header', { title: '错误', user: user }) %>

<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
  <div class="bg-white rounded-2xl shadow-xl p-12 text-center">
    <div
      class="inline-flex items-center justify-center w-24 h-24 bg-red-100 rounded-full mb-6"
    >
      <i class="bi bi-exclamation-triangle text-5xl text-red-500"></i>
    </div>

    <h2 class="text-3xl font-bold text-gray-900 mb-4"><%= message %></h2>

    <% if (error && error.status) { %>
    <div
      class="inline-flex items-center px-4 py-2 bg-gray-100 rounded-full mb-4"
    >
      <span class="text-sm font-medium text-gray-700"
        >错误代码: <%= error.status %></span
      >
    </div>
    <% } %> <% if (error && error.message) { %>
    <p class="text-gray-600 mb-8"><%= error.message %></p>
    <% } %>

    <div class="flex flex-col sm:flex-row gap-3 justify-center mt-8">
      <a
        href="/"
        class="px-6 py-3 bg-primary hover:bg-secondary text-white rounded-lg font-medium transition-all duration-200 inline-flex items-center justify-center space-x-2"
      >
        <i class="bi bi-house"></i>
        <span>返回首页</span>
      </a>
      <a
        href="javascript:history.back()"
        class="px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-lg font-medium transition-all duration-200 inline-flex items-center justify-center space-x-2"
      >
        <i class="bi bi-arrow-left"></i>
        <span>返回上一页</span>
      </a>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
