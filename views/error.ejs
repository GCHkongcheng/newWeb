<%- include('partials/header', { title: '错误', user: user }) %>

<div class="card" style="text-align: center">
  <h1 style="font-size: 72px; color: #dc3545; margin-bottom: 20px">⚠️</h1>
  <h2><%= message %></h2>
  <% if (error && error.status) { %>
  <p style="color: #666; margin-top: 10px">错误代码: <%= error.status %></p>
  <% } %> <% if (error && error.message) { %>
  <p style="color: #666; margin-top: 10px"><%= error.message %></p>
  <% } %>
  <div style="margin-top: 30px">
    <a href="/" class="btn btn-primary">返回首页</a>
    <a
      href="javascript:history.back()"
      class="btn btn-secondary"
      style="margin-left: 10px"
      >返回上一页</a
    >
  </div>
</div>

<%- include('partials/footer') %>
