<%- include('../partials/header', { title: '回收站' }) %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8">
    <h1 class="text-3xl font-bold text-gray-900 flex items-center">
      <i class="bi bi-trash mr-3 text-red-500"></i>
      回收站
    </h1>
    <div class="flex gap-3">
      <a href="/files" class="px-6 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-lg transition-all duration-200 flex items-center space-x-2">
        <i class="bi bi-arrow-left"></i>
        <span>返回文件列表</span>
      </a>
      <% if (files.length > 0) { %>
      <button
        onclick="emptyTrash()"
        class="px-6 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg transition-all duration-200 flex items-center space-x-2 shadow-lg hover:shadow-xl"
      >
        <i class="bi bi-trash-fill"></i>
        <span>清空回收站</span>
      </button>
      <% } %>
    </div>
  </div>

  <% if (files.length === 0) { %>
  <!-- Empty State -->
  <div class="bg-white rounded-xl shadow-md p-12 text-center">
    <i class="bi bi-trash3 text-6xl text-gray-300 mb-4"></i>
    <p class="text-xl text-gray-600 mb-2">回收站是空的</p>
    <p class="text-gray-400">已删除的文件将在这里保留30天</p>
  </div>
  <% } else { %>
  <!-- Warning Alert -->
  <div class="mb-6 p-4 bg-amber-50 border-l-4 border-amber-500 rounded-lg">
    <div class="flex items-center">
      <i class="bi bi-exclamation-triangle text-amber-500 mr-2 text-xl"></i>
      <p class="text-amber-800 text-sm">回收站中的文件将在30天后自动永久删除</p>
    </div>
  </div>

  <!-- Desktop Table View -->
  <div class="hidden lg:block bg-white rounded-xl shadow-md overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">文件名</th>
          <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">大小</th>
          <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">删除时间</th>
          <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">过期时间</th>
          <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% files.forEach(file => { %>
        <tr class="hover:bg-gray-50 transition-colors">
          <td class="px-6 py-4">
            <div class="flex items-center">
              <i class="bi bi-file-earmark-text text-2xl text-gray-400 mr-3"></i>
              <span class="text-sm font-medium text-gray-900"><%= file.originalName %></span>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
            <%= (file.size / 1024).toFixed(2) %> KB
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
            <%= new Date(file.deletedAt).toLocaleString('zh-CN') %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-red-600">
            <%= new Date(file.expireAt).toLocaleString('zh-CN') %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-3">
            <button
              onclick="restoreFile('<%= file.id %>')"
              class="text-green-600 hover:text-green-800 transition-colors inline-flex items-center space-x-1"
            >
              <i class="bi bi-arrow-clockwise"></i>
              <span>恢复</span>
            </button>
            <button
              onclick="permanentDelete('<%= file.id %>')"
              class="text-red-600 hover:text-red-800 transition-colors inline-flex items-center space-x-1"
            >
              <i class="bi bi-x-circle"></i>
              <span>彻底删除</span>
            </button>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Mobile Card View -->
  <div class="lg:hidden space-y-4">
    <% files.forEach(file => { %>
    <div class="bg-white rounded-xl shadow-md p-4 hover:shadow-lg transition-shadow">
      <div class="flex items-start mb-3">
        <i class="bi bi-file-earmark-text text-3xl text-gray-400 mr-3 flex-shrink-0"></i>
        <div class="min-w-0 flex-1">
          <h3 class="text-sm font-medium text-gray-900 truncate"><%= file.originalName %></h3>
          <p class="text-xs text-gray-500"><%= (file.size / 1024).toFixed(2) %> KB</p>
        </div>
      </div>
      <div class="text-xs text-gray-500 space-y-1 mb-3">
        <p><i class="bi bi-clock mr-1"></i>删除: <%= new Date(file.deletedAt).toLocaleString('zh-CN') %></p>
        <p class="text-red-600"><i class="bi bi-hourglass-split mr-1"></i>过期: <%= new Date(file.expireAt).toLocaleString('zh-CN') %></p>
      </div>
      <div class="flex space-x-2">
        <button
          onclick="restoreFile('<%= file.id %>')"
          class="flex-1 px-3 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors text-sm"
        >
          <i class="bi bi-arrow-clockwise mr-1"></i>恢复
        </button>
        <button
          onclick="permanentDelete('<%= file.id %>')"
          class="flex-1 px-3 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors text-sm"
        >
          <i class="bi bi-x-circle mr-1"></i>彻底删除
        </button>
      </div>
    </div>
    <% }) %>
  </div>
  <% } %>
</div>

<script>
  function restoreFile(fileId) {
    if (!confirm("确定要恢复这个文件吗?")) return;

    fetch("/files/trash/restore/" + fileId, { method: "POST" })
      .then((res) => res.json())
      .then((data) => {
        if (data.success) {
          alert(data.message);
          location.reload();
        } else {
          alert("恢复失败: " + data.message);
        }
      })
      .catch(() => alert("恢复失败"));
  }

  function permanentDelete(fileId) {
    if (!confirm("确定要彻底删除这个文件吗？删除后无法恢复！")) return;

    fetch("/files/trash/" + fileId, { method: "DELETE" })
      .then((res) => res.json())
      .then((data) => {
        if (data.success) {
          alert(data.message);
          location.reload();
        } else {
          alert("删除失败: " + data.message);
        }
      })
      .catch(() => alert("删除失败"));
  }

  function emptyTrash() {
    if (!confirm("确定要清空回收站吗？所有文件将被彻底删除且无法恢复！")) return;

    fetch("/files/trash/empty", { method: "POST" })
      .then((res) => res.json())
      .then((data) => {
        if (data.success) {
          alert(data.message);
          location.reload();
        } else {
          alert("清空失败: " + data.message);
        }
      })
      .catch(() => alert("清空失败"));
  }
</script>

<%- include('../partials/footer') %>
