    .getElementById("createFileForm")
    .addEventListener("submit", async (e) => {
      e.preventDefault();

      const filename = document.getElementById("createFilename").value.trim();
      const content = document.getElementById("createContent").value;
      const category = document.getElementById("createCategory").value;
      const isPublic = document.getElementById("createIsPublic").checked;
      const description = document.getElementById("createDescription").value;

      // 验证文件名
      if (!filename) {
        alert("请输入文件名");
        return;
      }

      // 验证文件名字符
      const invalidChars = /[\/\\:*?"<>|]/;
      if (invalidChars.test(filename)) {
        alert('文件名不能包含以下字符: / \\ : * ? " < > |');
        return;
      }

      // 验证内容
      if (!content.trim()) {
        alert("文件内容不能为空");
        return;
      }

      // 检查内容大小（5MB限制）
      const contentSize = new Blob([content]).size;
      const maxSize = 5 * 1024 * 1024; // 5MB
      if (contentSize > maxSize) {
        alert(
          `文件内容过大！\n当前大小: ${(contentSize / 1024 / 1024).toFixed(
            2
          )}MB\n最大允许: 5MB`
        );
        return;
      }

      try {
        const response = await fetch("/files/create", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            filename,
            content,
            category,
            isPublic,
            description,
          }),
        });

        const result = await response.json();

        if (result.success) {
          alert("文件创建成功！");
          location.reload();
        } else {
          alert("创建失败: " + result.message);
